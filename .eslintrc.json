{
    "env": {
      "browser": true,
      "es6": true,
      "node": true,
      "mocha": true
    },
    "extends": ["airbnb-base"],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "rules": {
      "indent": ["warn", 2],
      "linebreak-style": ["error", "unix"],
      "quotes": ["error", "single"],
      "semi": ["error", "always"],
      "no-console": ["error", { "allow": ["info", "error"] }],
      "comma-dangle": [0],
      "arrow-parens": [0],
      "object-curly-spacing": ["warn", "always"],
      "import/prefer-default-export": [0]
    }
  }
  